<html>
<style>
    textarea {
        width: 600px;
        height: 200px;
    }

    .button {
        background-color: teal;
        color: white;
        padding: 15px 15px;
        text-decoration: none;
    }
</style>

<body>
    <h1>Add Food</h1>
    <% if (errors !=undefined) { %>
        <ul>
            <% errors.forEach((error)=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>


            <form action="/addFood" method="POST">
                <label>Food Id: </label>
                <input type="number" name="fid"><br><br>
                <label>Food Name: </label>
                <input type="text" name="fname"><br><br>
                <label>Ingredients: </label>
                <textarea name="ingredient"></textarea><br><br>
                <label>Method: </label>
                <textarea name="method"></textarea><br><br>
                <input type="submit" value="Add">
            </form>

            <br><br>
            <a href="/" class="button">HOME</a> </button>
            <a href="/food" class="button">FOOD</a> </button>
</body>

</html>