<!DOCTYPE html>
<html lang="en">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

<head>
  <style>
    body {
      background-image: url("https://wallpapercave.com/wp/wp6979519.jpg");
    }

    table {
      border-spacing: 1;
      border-collapse: collapse;
      background: white;
      border-radius: 6px;
      overflow: hidden;
      max-width: 1000px;
      width: 100%;
      margin: 0 auto;
      position: relative;
    }

    thead tr {
      height: 60px;
      background: #ffcc85;
      font-size: 16px;
    }

    td,
    th {
      padding-left: 8px
    }

    h1 {
      color: #E4DFE1;
    }
  </style>
</head>

<body>
  <!--Navigation Bar-->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Jasmine Restaurant</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/food">Food</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/employee">Employee</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/supplier">Supplier</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/booking">Booking</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!--Heading-->
  <br>
  <div class="text-center">
    <h1>Employee Page</h1>
  </div>
  <br>

  <!--Table-->
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Employee Id</th>
        <th>Fist Name</th>
        <th>Last Name</th>
        <th>Job</th>
        <th>Hiredate</th>
        <th>Salary</th>
        <th>Update</th>
        <th>Delete</th>

      </tr>
    </thead>
    <tbody>
      <% for(var i=0; i <employees.length; i++) { %>

        <tr>
          <td>
            <%= employees[i].Empno %>
          </td>
          <td>
            <%= employees[i].name %>
          </td>
          <td>
            <%= employees[i].lname %>
          </td>
          <td>
            <%= employees[i].job %>
          </td>
          <td>
            <%= employees[i].hiredate %>
          </td>
          <td>
            <%= employees[i].salary %>
          </td>

          <td>
            <a href="/updateEmp/<%= employees[i].Empno%>" type="button" class="btn btn-info">Update</a>
          </td>
          <td>
            <a href="/deleteEmp/<%= employees[i].Empno%>" type="button" class="btn btn-danger">Delete</a>
          </td>

        </tr>
        <% } %>
    </tbody>
  </table>

  <br><br>
  <div class="text-center">
    <a href="/addEmp" type="button" class="btn btn-outline-warning">ADD EMPLOYEE</a> </button>
  </div>
  <br><br>
</body>

</html>