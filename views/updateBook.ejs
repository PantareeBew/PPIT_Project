    <!--bookingNo, bookingDate, name, quantity, bookedBy, phone, tableNo-->
        <form action="/updateBook/<%=bookingNo%>" method="POST">
            <div class="row g-3">
                <div class="col-md-6 w-25">
                    <label>Booking Number: </label>
                    <input type="number" class="form-control" name="bookingNo" value="<%=bookingNo%>"><br><br>
                </div>
                <div class="col-md-6 w-25">
                    <label>Date: </label> <!-- need to input value in everytime of updating-->
                    <input type="date" class="form-control" name="bookingDate" value="<%=bookingDate%>"><br><br>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-md-6 w-25">
                    <label>Customer Name: </label>
                    <input type="text" class="form-control" name="name" value="<%=name%>"><br><br>
                </div>
                <div class="col-md-6 w-25">
                    <label>Quantity: </label>
                    <input type="text" class="form-control" name="quantity" value="<%=quantity%>"><br><br>
                </div>
            </div>
        <!--<select name="bookedBy">
                <option value="Email">Email</option>
                <option value="Phone">Phone</option>
            </select><br><br>--> 
            <div class="row g-3">
                <div class="col-md-6" style="width: 323px;">
                    <label>Booked By: </label> 
                    <input type="text" class="form-control" name="bookedBy" value="<%=bookedBy%>"><br><br>
                </div>
                <div class="col-md-6" style="width: 323px;">
                    <label>Phone: </label>
                    <input type="number" class="form-control" name="phone" value="<%=phone%>"><br><br>
                </div>
                <div class="col-md-6" style="width: 323px;">
                    <label>tableNo: </label>
                    <input type="number" class="form-control" name="tableNo" value="<%=tableNo%>"><br><br>
                </div>
            </div>
            <input type="submit" class="btn btn-primary" value="Update">
            
        </form> 
        <br><br>
    
</body>