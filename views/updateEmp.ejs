    <h1>Edit Employee Details</h1>

    <% if (errors !=undefined) { %>
        <ul>
            <% errors.forEach((error)=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
    <% } %>
        
        <form action="/updateEmp/<%=Empno%>" method="POST">
            <div class="col-12 w-50">
            <label>Employee Number: </label>
            <input type="number" class="form-control" name="Empno" value="<%=Empno%>"><br><br>
            </div>
            <div class="row g-3">
                <div class="col-md-6 w-25">
                    <label>Employee Name: </label>
                    <input type="text" class="form-control" name="name" value="<%=name%>"><br><br>
                </div>
                <div class="col-md-6 w-25">
                    <label>Employee Last Name: </label>
                    <input type="text" class="form-control" name="lname" value="<%=lname%>"><br><br>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-md-6 w-25">
                    <label>Job: </label>
                    <input type="text" class="form-control" name="job" value="<%=job%>"><br><br>
                </div>
                <div class="col-md-6 w-25">
                    <label>Hiredate: </label> <!-- need to input value in everytime of updating-->
                    <input type="date" class="form-control" name="hiredate" value="<%=hiredate%>"><br><br><!--2021-04-23-->
                </div>
            </div>
            <div class="col-12 w-50">
                <label>Salary: </label>
                <input type="number" class="form-control" name="salary" value="<%=salary%>"><br><br>
            </div>
            <input type="submit" class="btn btn-primary" value="Update">
            
        </form> 
        <br><br>
</body>
