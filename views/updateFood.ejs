  <h1>Edit Food Details</h1>

  <% if (errors !=undefined) { %>
    <ul>
      <% errors.forEach((error)=> { %>
        <li>
          <%= error.msg %>
        </li>
        <% }) %>
    </ul>
    <% } %>

      <form action="/updateFood/<%=fid%>" method="POST">
        <div class="form-group w-25">
          <label>Food Code: </label>
          <input type="number" class="form-control" name="fid" value="<%=fid%>"><br><br>
        </div>
        <div class="form-group w-25">
          <label>Food Name: </label>
          <input type="text" class="form-control" name="fname" value="<%=fname%>"><br><br>
        </div>
        <div class="form-group" style="width: 700px;">
          <label>Ingredients Details: </label>
          <textarea name="ingredient" class="form-control"><%=ingredient%></textarea><br><br>
        </div>
        <div class="form-group w-50">
          <label>Method: </label>
          <textarea name="method" class="form-control"><%=method%></textarea><br><br>
        </div>
        <input type="submit" class="btn btn-primary" value="Update">

      </form>
      <br><br>

</body>